    "rimraf": "3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^8.10.2",
    "ts-node-dev": "1.0.0-pre.44",
    "tslint": "^6.1.2",
    "typedi": "~0.8.0",
